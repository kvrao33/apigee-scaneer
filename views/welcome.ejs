<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Apigee Organization</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to bottom, #bde3ee, #8ebcf5);
            overflow: hidden;
        }
        .container {
            text-align: center;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        select, button {
            padding: 10px;
            margin-top: 20px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            background-color: #2f81e6;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #6da3d9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Select Apigee Organization</h1>
        <form action="/proxies" method="POST">
            <select name="organization" required>
                <% apigeeOrgs.forEach(function(org) { %>
                    <option value="<%= org.organization %>"><%= org.organization %></option>
                <% }); %>
            </select>
            <br>
            <button type="submit">Next</button>
        </form>
    </div>
</body>
</html>
